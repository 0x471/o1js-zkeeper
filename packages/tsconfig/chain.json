{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Chain",
  "extends": "./base.json",
  "compilerOptions": {
    "strictNullChecks": true,
    "lib": ["es2020"],
    "target": "ES2020",
    "module": "ES2022",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "alwaysStrict": true,
    "declarationMap": true,
    "strictFunctionTypes": true
  }
}
